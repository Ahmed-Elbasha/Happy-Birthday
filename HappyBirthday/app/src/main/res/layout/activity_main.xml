<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ahmedelbasha.happybirthday.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/androidparty"
        android:scaleType="centerCrop"
        android:id="@+id/happy_birthday_image_view"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Happy Birthday Ahmed"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textSize="28sp"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-light"
        android:padding="20dp"
        android:id="@+id/happy_birthday_text_view"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From, Ahmed!"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textSize="28sp"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-light"
        android:padding="20dp"
        android:id="@+id/from_ahmed_text_view"/>

</RelativeLayout>
